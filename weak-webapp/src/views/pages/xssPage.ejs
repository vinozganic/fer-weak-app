<body>
  <div class="container">
    <h1>Custom Greeting Demo</h1>

    <form action="/toggle-xss" method="post" class="toggle">
      <label for="xssToggle">XSS Vulnerability:</label>
      <input type="checkbox" id="xssToggle" name="xssToggle"
        <% if (xssVulnerabilityEnabled) { %>checked<% } %>
        onchange="this.form.submit()">
      <span><%= xssVulnerabilityEnabled ? 'Enabled' : 'Disabled' %></span>
    </form>

    <% if (!isAuthenticated) { %>
      <!-- Login Form -->
      <h2>Login</h2>
      <form action="/login" method="post">
        <label for="username">Username:</label>
        <input type="text" id="username" name="username" required>
        <button type="submit">Login</button>
      </form>
    <% } else { %>
      <!-- Greeting and Custom Message Form -->
      <p>Welcome, <%= username %>!</p>
      <% if (customMessage) { %>
        <h3>Your Greeting Message:</h3>
        <p><%- customMessage %></p>
      <% } %>
      <h3>Set Your Greeting Message:</h3>
      <form action="/message" method="post">
        <textarea name="customMessage" rows="4" required></textarea>
        <button type="submit">Update Message</button>
      </form>
      <form action="/logout" method="post">
        <button type="submit">Logout</button>
      </form>
    <% } %>
  </div>
</body>
</html>
